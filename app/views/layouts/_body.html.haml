%nav.top-bar
  %ul.title-area
    %li
      .name
        %h1#title Board Game Tracker
  %section.top-bar-section
    %ul.left
      %li.divider
      - if current_user
        %li.active
          = link_to "Home", root_path
        %li.divider
        %li.active
          = link_to "Add Game", games_search_path
        %li.divider
        %li.active
          = link_to "Play Game", root_path
        %li.divider
        %li.active
          = link_to "Suggest Game", suggest_game_path
        %li.divider
        %li.active
          = link_to "My Plays", plays_path
    %ul.right
      - if current_user
        %li{:class => 'has_form'}
          = link_to "Sign Out", destroy_user_session_path, method: :delete
      - else
        %li{:class => 'has_form'}
          = link_to "Sign Up", new_user_registration_path
        %li.divider
        %li{:class => 'has_form'}
          = link_to "Sign In", new_user_session_path

.row
  .small-6.columns.small-offset-3
    -if flash.notice
      .alert-box.success.radius
        = flash.notice
    -if flash.alert
      .alert-box.warning.radius
        = flash.alert
  .small-3.columns